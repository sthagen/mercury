;; default emacs settings to make it easier to have well-indented code
;; commits with minimal whitespace diffs; to use this file with emacs,
;; rename it to ".emacs" and copy it to your home directory
;;
(setq-default show-trailing-whitespace t)
(setq-default c-basic-offset 4)
(setq-default tab-width 4)
(setq-default indent-tabs-mode nil)
